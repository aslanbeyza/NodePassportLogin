<div class="row mt-5 d-flex justify-content-center">
    <div class="col-md-6 m-auto ">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> KAYIT
        </h1>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">AD</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="adınızı giriniz"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email">EMAİL</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="mailinizi giriniz"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">ŞİFRE</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="yeni şifre"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">YENİ ŞİFRE TEKRAR</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="yeni şifre tekrar"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            KAYIT OL
          </button>
        </form>
        <p class="lead mt-4">Hesabınız Var mı? <a href="/users/login">GİRİŞ YAP</a></p>
      </div>
    </div>
  </div>